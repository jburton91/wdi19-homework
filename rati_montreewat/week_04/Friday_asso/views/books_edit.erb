<h2>Edit Book</h2>

<form action="/books/<%= @book['id'] %>" method="post">
  <input type="text" name="name" placeholder="Book name" value="<%= @book['name'] %>">
  <input type="text" name="year" placeholder="the year released" value="<%= @book['year'] %>">
  <input type="url" name="image" placeholder="http://..." value="<%= @book['image'] %>">
  <select name="author_id">
  <option></option>
  <% Author.all.each do |author| %>
    <option value="<%= author.id %>" <%= "selected" if @book.author_id == author.id %>><%= author.name %></option>
  <% end %>
</select>
  <button>Update</button>
</form>
