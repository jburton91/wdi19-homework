<h2><%= @author['name'] %></h2>

<% unless @author.books.empty? %>
  <h3>Associated books</h3>
  <ul>
    <% @author.books.each do |book| %>
      <li>
        <a href="/books/<%= book.id %>">
          <%= book.name %>
        </a>
      </li>
    <% end %>
  </ul>
<% end %>


<% unless @author['image'].nil? %>
  <img class="feature" src="<%= @author['image'] %>" alt="">
<% end %>

<div class="controls">
  <a href="/authors/<%= @author['id'] %>/delete">Delete</a>
  <a href="/authors/<%= @author['id'] %>/edit">Edit</a>
</div>
