<h1><%= @mountain.name %></h1>
<ul>
  <li>Height: <%= @mountain.height %> m</li>
  <li>Country: <%= @mountain.country %></li>
  <div><%= image_tag(@mountain.image, class: 'feature') %></div>
</ul>
<p><%= @mountain.facts %></p>

<div class="controls">
  <%= link_to "Edit mountain", mountain_edit_path(@mountain.id) %>
  <%= link_to "Delete mountain", mountain_delete_path(@mountain.id), :method => 'post' %>
</div>
