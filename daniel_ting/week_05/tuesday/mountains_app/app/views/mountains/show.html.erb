<h1><%= @mountain.name %></h1>
<% if @mountain.image.present? %>
  <%= image_tag @mountain.image %>
<% end %>
<p>Elevation: <%= @mountain.elevation %></p>
<p>Location: <%= @mountain.location %></p>
<iframe src="https://www.google.com/maps?q=<%= @mountain.location %>&amp;output=embed" width="400" height="300" frameborder="0" style="border:0" allowfullscreen></iframe>
<p>Description: <%= @mountain.description %></p>

<div class="controls">
  <%= link_to "Edit Mountain", mountain_edit_path(@mountain.id) %>
  <%= button_to "Delete Mountain", mountain_delete_path(@mountain.id), :method => 'post' %>
</div>
